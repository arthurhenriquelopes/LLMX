{
    "name": "llmx",
    "version": "2.0.0",
    "description": "Linux Assistant powered by Llama 3.3 70B via Groq",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "llmx": "./bin/llmx.js"
    },
    "scripts": {
        "build": "esbuild src/index.tsx --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --packages=external",
        "dev": "tsx watch src/index.tsx",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "cli",
        "ai",
        "assistant",
        "llama",
        "groq"
    ],
    "author": "Arthur",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.4.1",
        "clipboardy": "^5.1.0",
        "dotenv": "^16.4.7",
        "groq-sdk": "^0.9.0",
        "ink": "^5.0.1",
        "openai": "^6.16.0",
        "react": "^18.3.1"
    },
    "devDependencies": {
        "@types/node": "^22.10.5",
        "@types/react": "^18.3.18",
        "esbuild": "^0.24.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vitest": "^2.1.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
